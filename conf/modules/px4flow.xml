<!DOCTYPE module SYSTEM "module.dtd">

<module name="px4flow" dir="optical_flow">
  <doc>
    <description>PX4FLOW optical flow sensor</description>
  </doc>
  <depend require="mavlink_decoder"/>
  <header>
    <file name="px4flow.h"/>
  </header>
  <init fun="px4flow_init()"/>
  <!--<periodic fun="px4flow_downlink()" freq="10"/>--> <!-- for debug -->
  <makefile>
    <file name="px4flow.c"/>
  </makefile>
  <makefile target="ap">
		<define name="USE_SONAR"/>
		<define name="INS_SONAR_MAX_RANGE" value="9001"/>
		<!-- TODO over 9000 is not really the value to use here, but at least it shouldn't be to small -->
  </makefile>
</module>


