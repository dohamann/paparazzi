<!DOCTYPE module SYSTEM "module.dtd">

<module name="sonar">
  <doc>
    <description>
     Sonar driver for px4 Flow-Sonar Sensor
		 Relay output from px4 to ins-extended
    </description>
    <define name="SONAR_OFFSET" value="0.0"  description="sensor offset in [m] - default is 0.0"/>
    <define name="SONAR_SCALE" value="1.0" description="sensor scale factor [m/adc] - default is 1"/>
  </doc>

  <header>
    <file name="sonar_px4.h"/>
  </header>

  <makefile target="ap">
    <define name="USE_SONAR"/>
  </makefile>

</module>
