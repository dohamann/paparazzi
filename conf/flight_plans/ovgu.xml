		</block>
		<block name="left">
			<attitude pitch="0" roll="3" throttle="0.6" until="sonar_values.left > 90" vmode="throttle"/>
			<deroute block="default"/>
		</block>
		<block name="right">
			<attitude pitch="0" roll="-3" throttle="0.6" until="sonar_values.right > 90" vmode="throttle"/>
			<deroute block="default"/>
		</block>
		/-->
		<block name="default">
			<attitude pitch="0" roll="0" throttle="0.6" until="FALSE" vmode="throttle"/> 
		</block>

