		/-->
	</exceptions>


	<blocks>
		<block name="back">
			<attitude pitch="-3" roll="0" throttle="0.6" until="sonar_values.back > 90" vmode="throttle"/>
			<deroute block="default"/>
		</block>
		<!---
		<block name="front">
			<attitude pitch="3" roll="0" throttle="0.6" until="sonar_values.front > 90" vmode="throttle"/>
